[Unit]
Description=__APP_NAME__ gunicorn daemon
After=network.target

[Service]
PIDFile=/run/gunicorn/__APP_NAME__-pid
User=billerot
Group=www-data
WorkingDirectory=/var/www/__APP_NAME__
ExecStart=/var/www/__APP_NAME__/venv/bin/gunicorn -c /var/www/__APP_NAME__/gunicorn.py wsgi:app
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s TERM $MAINPID
PrivateTmp=true

[Install]
WantedBy=multi-user.target
